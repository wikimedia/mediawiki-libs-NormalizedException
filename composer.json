{
	"name": "wikimedia/normalized-exception",
	"description": "A helper for making exceptions play nice with PSR-3 logging",
	"license": "MIT",
	"homepage": "https://www.mediawiki.org/wiki/NormalizedException",
	"authors": [
		{
			"name": "GergÅ‘ Tisza",
			"email": "gtisza@wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\NormalizedException\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\NormalizedException\\Tests\\": "tests/phpunit/"
		}
	},
	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.6.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "9.6.21"
	},
	"config": {
		"optimize-autoloader": true,
		"prepend-autoloader": false,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"minus-x check ."
		],
		"phan": "phan --allow-polyfill-parser",
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phpcs": "phpcs -sp"
	}
}
